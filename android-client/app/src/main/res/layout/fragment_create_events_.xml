<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="achamp.project.org.achamp.CreatingEvents.CreateEvents_Fragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_pic"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/LIGHT_BLUE"
            android:padding="1dp"
            android:layout_weight="0.66" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text="Gallery" />

            <Button
                android:id="@+id/camera"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text="Camera" />

            <Button
                android:id="@+id/rotate"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:text="rotate" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/LIGHT_BLUE"></View>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.1"
            android:background="@color/GRAY"
            android:text="*Choose a title for your AChamp:"
            android:textColor="@color/BLACK" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            android:background="@color/GRAY"
            android:fadingEdge="vertical"
            android:inputType="textCapSentences"
            android:maxLength="20"
            android:textColor="@color/BLACK"
            android:id="@+id/achamp_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/LIGHT_BLUE"></View>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.1"
            android:background="@color/GRAY"
            android:text="*Add an address for your AChamp:"
            android:textColor="@color/BLACK" />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            android:background="@color/GRAY"
            android:fadingEdge="vertical"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="5"
            android:textColor="@color/BLACK"
            android:id="@+id/achamp_address"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/LIGHT_BLUE"></View>



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.1"
            android:background="@color/GRAY"
            android:text="Write a short description of AChamp:"
            android:textColor="@color/BLACK"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            android:background="@color/GRAY"
            android:fadingEdge="vertical"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:textColor="@color/BLACK"
            android:id="@+id/achamp_description"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/LIGHT_BLUE"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Begining date"
                android:id="@+id/date_button"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/date" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.8">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Begining time"
                android:id="@+id/time_button" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:focusable="false"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/time"
                android:layout_weight="0.8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/LIGHT_BLUE"></View>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text="Post AChamp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/achamp_post_event"/>

    </LinearLayout>




</ScrollView>